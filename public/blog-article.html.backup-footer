  <!-- Dynamic Blog Slug Detection -->
  <script>
    (function() {
      // Get blog slug from URL path (/blog/{slug})
      const pathParts = window.location.pathname.split('/').filter(part => part);
      let blogSlug = null;

      // Check if URL is /blog/{slug} format
      if (pathParts[0] === 'blog' && pathParts[1]) {
        blogSlug = pathParts[1];
        console.log('[Blog] Extracted slug from path:', blogSlug);
      } else {
        // Fallback: try query parameter
        const urlParams = new URLSearchParams(window.location.search);
        blogSlug = urlParams.get('slug');
        console.log('[Blog] Extracted slug from query:', blogSlug);
      }

      if (blogSlug) {
        // Store slug globally for HTMX to use
        window.BLOG_SLUG = blogSlug;
        window.BACKEND_URL = 'http://127.0.0.1:8000';
        console.log('[Blog] Final slug set:', blogSlug);
      } else {
        console.error('[Blog] No slug found in URL!');
        // Don't set a fallback - let it fail so we can see the error
        window.BLOG_SLUG = null;
        window.BACKEND_URL = 'http://127.0.0.1:8000';
      }
    })();
  </script>
