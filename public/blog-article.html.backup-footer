  <!-- HTMX Dynamic URL Initialization (must run BEFORE HTMX loads) -->
  <script>
    (function() {
      // Guard to prevent re-execution
      if (window.BLOG_HTMX_INITIALIZED) return;
      window.BLOG_HTMX_INITIALIZED = true;

      if (!window.BLOG_SLUG) {
        console.warn('[Blog] No slug detected, HTMX will not load content');
        return;
      }

      console.log('[Blog] Setting HTMX URLs for slug:', window.BLOG_SLUG);

      // Set hero section URL
      const heroSection = document.querySelector('[data-blog-section="hero"]');
      if (heroSection) {
        heroSection.setAttribute('hx-get', `${window.BACKEND_URL}/partials/blog/${window.BLOG_SLUG}/hero`);
      }

      // Set content section URL
      const contentSection = document.querySelector('[data-blog-section="content"]');
      if (contentSection) {
        contentSection.setAttribute('hx-get', `${window.BACKEND_URL}/partials/blog/${window.BLOG_SLUG}/content`);
      }

      // Set sidebar section URL
      const sidebarSection = document.querySelector('[data-blog-section="sidebar"]');
      if (sidebarSection) {
        sidebarSection.setAttribute('hx-get', `${window.BACKEND_URL}/partials/blog/${window.BLOG_SLUG}/sidebar`);
      }

      // Set related articles section URL
      const relatedSection = document.querySelector('[data-blog-section="related"]');
      if (relatedSection) {
        relatedSection.setAttribute('hx-get', `${window.BACKEND_URL}/partials/blog/${window.BLOG_SLUG}/related`);
      }

      // Set comments section URL
      const commentsSection = document.querySelector('[data-blog-section="comments"]');
      if (commentsSection) {
        commentsSection.setAttribute('hx-get', `${window.BACKEND_URL}/partials/blog/${window.BLOG_SLUG}/comments`);
      }

      console.log('[Blog] HTMX URLs set successfully, now loading HTMX library');
    })();
  </script>

  <!-- HTMX Library (loads after URLs are set) -->
  <script src="/js/htmx.min.js"></script>

  <!-- HTMX Event Handlers -->
  <script>
    (function() {
      // Guard to prevent multiple event listener registration
      if (window.HTMX_EVENTS_REGISTERED) return;
      window.HTMX_EVENTS_REGISTERED = true;

      document.body.addEventListener('htmx:afterSwap', function(evt) {
        console.log('[HTMX] Loaded:', evt.detail.pathInfo.requestPath);
      });

      document.body.addEventListener('htmx:responseError', function(evt) {
        console.error('[HTMX] Error:', evt.detail.pathInfo.requestPath);
        evt.detail.target.innerHTML = '<div style="padding:20px;background:#fee;color:#c33;">Failed to load content. Please refresh the page.</div>';
      });
    })();
  </script>

