# ==============================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ==============================================
# This is a template for production .env file
# Copy this to .env and update with actual values
# ==============================================

# Application Settings
APP_NAME="Jahongir Travel"
APP_ENV=production
APP_KEY=                                    # Generate with: php artisan key:generate
APP_DEBUG=false                              # NEVER set to true in production
APP_URL=https://jahongirtravel.com           # Your production domain with HTTPS

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

# Performance Settings
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# Logging
LOG_CHANNEL=stack
LOG_STACK=daily                              # Use daily rotation in production
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error                              # Only log errors in production

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1                           # Your production database host
DB_PORT=3306
DB_DATABASE=ssst3_production                # Production database name
DB_USERNAME=                                # Production database user
DB_PASSWORD=                                # Production database password

# Session Configuration
SESSION_DRIVER=database                      # Or redis for better performance
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=.jahongirtravel.com          # Your production domain

# Broadcasting & Filesystem
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local                        # Or s3 for cloud storage
QUEUE_CONNECTION=database                    # Or redis for better performance

# Cache Configuration
CACHE_STORE=redis                           # Use redis in production for performance
CACHE_PREFIX=jahongir_

# Redis Configuration (Recommended for production)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=                             # Your Redis password
REDIS_PORT=6379

# Memcached (Alternative to Redis)
MEMCACHED_HOST=127.0.0.1

# Mail Configuration
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=smtp-relay.brevo.com
MAIL_PORT=587
MAIL_USERNAME=                              # Your SMTP username
MAIL_PASSWORD=                              # Your SMTP password
MAIL_FROM_ADDRESS="info@jahongirtravel.com"
MAIL_FROM_NAME="${APP_NAME}"
MAIL_ENCRYPTION=tls                         # or ssl

# AWS Configuration (if using S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Vite
VITE_APP_NAME="${APP_NAME}"

# ==============================================
# AI SERVICES CONFIGURATION
# ==============================================

# DeepSeek AI Configuration
OPENAI_API_KEY=                             # Your DeepSeek API key
OPENAI_BASE_URL=https://api.deepseek.com
OPENAI_REQUEST_TIMEOUT=60

DEEPSEEK_API_KEY=                           # Your DeepSeek API key

# OpenAI Configuration (for ChatGPT models)
OPENAI_REAL_API_KEY=                        # Your OpenAI API key (if needed)

# ==============================================
# TELEGRAM BOT CONFIGURATION
# ==============================================

TELEGRAM_BOT_TOKEN=                         # Your production Telegram bot token
TELEGRAM_ADMIN_CHAT_ID=                     # Admin chat ID for notifications

# ==============================================
# WHATSAPP CONFIGURATION
# ==============================================

WHATSAPP_NUMBER=998915550808                # Your WhatsApp business number

# ==============================================
# BOOKING CONFIGURATION
# ==============================================

BOOKING_DEPOSIT_PERCENTAGE=30
BOOKING_MIN_HOURS_ADVANCE=24
BOOKING_MAX_GUESTS=10

# ==============================================
# PAYMENT GATEWAY - OCTO (PRODUCTION)
# ==============================================

OCTO_BASE_URL=https://api.octo.uz/v1        # Production API URL
OCTO_API_KEY=                               # Your production OCTO API key
OCTO_WEBHOOK_SECRET=                        # Your production webhook secret
OCTO_MERCHANT_ID=                           # Your production merchant ID

# ==============================================
# MONITORING & ANALYTICS (Optional)
# ==============================================

# Google Analytics
# GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Sentry Error Tracking
# SENTRY_LARAVEL_DSN=
# SENTRY_TRACES_SAMPLE_RATE=0.1

# ==============================================
# SECURITY NOTES
# ==============================================
# 1. Ensure APP_DEBUG is set to false
# 2. Use strong APP_KEY (generated via php artisan key:generate)
# 3. Configure HTTPS in your web server (Nginx/Apache)
# 4. Set proper file permissions (755 for directories, 644 for files)
# 5. Ensure storage/ and bootstrap/cache/ are writable
# 6. Configure firewall rules to restrict database access
# 7. Use environment-specific credentials
# 8. Enable Redis/Memcached for production caching
# 9. Set up automated backups for database
# 10. Configure log rotation to prevent disk space issues
# ==============================================
