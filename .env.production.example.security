# ============================================
# SESSION SECURITY CONFIGURATION
# ============================================
# IMPORTANT: Add these to production .env for secure sessions

# Force cookies to be sent only over HTTPS
SESSION_SECURE_COOKIE=true

# Prevent JavaScript access to session cookies (XSS protection)
SESSION_HTTP_ONLY=true

# Control when cookies are sent cross-origin
# Options: strict (most secure), lax (recommended), none (least secure)
SESSION_SAME_SITE=lax

# ============================================
# OCTOBANK PRODUCTION CONFIGURATION
# ============================================
# CRITICAL: Set these correctly for production

# Disable test mode in production (MUST be false)
OCTOBANK_TEST_MODE=false

# Use production credentials (not staging/test credentials)
OCTOBANK_SHOP_ID=<your-production-shop-id>
OCTOBANK_SECRET_KEY=<your-production-secret-key>
OCTOBANK_API_URL=https://secure.octo.uz

# Production URLs (update domain)
OCTOBANK_RETURN_URL=https://yourdomain.com/payment/result
OCTOBANK_CALLBACK_URL=https://yourdomain.com/api/octobank/webhook
